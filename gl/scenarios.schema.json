{
  "$id": "https://example.com/scenarios.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "GL Standard Rating",
  "type": "object",
  "properties": {
    "Exposure": {
      "type": "object",
      "description": "Standard GL Exposure",
      "properties": {
        "amount": {
          "type": "string",
          "format": "cov-decimal",
          "example": "2500000"
        },
        "basisFactor": {
          "type": "string",
          "format": "cov-decimal",
          "description": "The conversion factor applied per unit of 'amount'",
          "example": "0.001"
        },
        "basisType": {
          "type": "string",
          "description": "Exposure Basis Type",
          "example": "sales",
          "enum": [
            "sales",
            "payroll",
            "units",
            "area",
            "acres",
            "operations",
            "admissions"
          ]
        },
        "classCode": {
          "type": "string",
          "description": "Exposure Class Code",
          "example": "50701"
        },
        "currency": {
          "type": "string",
          "enum": ["usd"],
          "description": "If amount is a currency, which currency",
          "example": "usd"
        },
        "effectiveDate": {
          "type": "string",
          "format": "date-time",
          "description": "Exposure effective date",
          "example": "2023-01-01T00:00:00Z"
        },
        "expirationDate": {
          "type": "string",
          "format": "date-time",
          "description": "Exposure expiration date",
          "example": "2024-01-01T00:00:00Z"
        },
        "id": {
          "type": "string",
          "description": "Exposure id unique identifier",
          "example": "exposure-1"
        },
        "modifier": {
          "type": "string",
          "format": "cov-decimal",
          "description": "Exposure level discretionary modifier",
          "example": "-0.1"
        },
        "overrideRate": {
          "type": "string",
          "format": "cov-decimal",
          "description": "If present, this overrides the system calculated rate",
          "example": "2.303"
        },
        "territoryCode": {
          "type": "string",
          "description": "The relevant territory code",
          "example": "201"
        }
      }
    },
    "ExposureRating": {
      "type": "object",
      "description": "Exposure rating results",
      "properties": {
        "exposureRef": {
          "type": "string",
          "description": "The ID of the exposure input",
          "example": "exposure-1"
        },
        "currency": {
          "type": "string",
          "enum": ["usd"],
          "example": "usd"
        },
        "premium": {
          "type": "string",
          "format": "cov-decimal"
        }
      }
    },
    "GeneralLiabilityLine": {
      "type": "object",
      "description": "GL Line Level Properties",
      "properties": {
        "limits": {
          "type": "string",
          "description": "GL limits lookup value",
          "example": "1M/1M"
        },
        "deductible": {
          "type": "string",
          "description": "GL deductible lookup value",
          "example": "SIR/250000"
        },
        "effectiveDate": {
          "type": "string",
          "format": "date-time",
          "description": "Exposure effective date",
          "example": "2023-01-01T00:00:00Z"
        },
        "expirationDate": {
          "type": "string",
          "format": "date-time",
          "description": "Exposure expiration date",
          "example": "2024-01-01T00:00:00Z"
        },
        "modifier": {
          "type": "string",
          "description": "Line level modifier",
          "example": "0.10"
        }
      }
    },
    "RatingInput": {
      "type": "object",
      "description": "GL Rating Input",
      "properties": {
        "generalLiabilityLine": {
          "ref": "#/schemas/GeneralLiabilityLine"
        },
        "exposures": {
          "type": "array",
          "items": {
            "ref": "#/schemas/Exposure"
          }
        }
      }
    },
    "RatingOutput": {
      "type": "object",
      "description": "Rating output",
      "properties": {
        "exposureRating": {
          "type": "array",
          "items": {
            "ref": "#/schemas/ExposureRating"
          }
        }
      }
    }
  }
}
