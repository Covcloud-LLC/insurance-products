{
  "$id": "https://covcloud.com/products/gl/rating/schemas/glexposurerateable",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "General Liability Exposure Rateable Element",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique id of the rating item",
      "example": "exposure-1-1"
    },
    "basisAmount": {
      "type": "string",
      "format": "cov-decimal",
      "example": "2500000"
    },
    "basisAmountProrataFactor": {
      "type": "string",
      "format": "cov-decimal",
      "example": "0.880"
    },
    "basisAmountStandard": {
      "type": "string",
      "format": "cov-decimal",
      "example": "2500000"
    },
    "basisFactor": {
      "type": "string",
      "format": "cov-decimal",
      "description": "The conversion factor applied per unit of 'amount'",
      "example": "0.001"
    },
    "basisType": {
      "type": "string",
      "description": "Exposure Basis Type",
      "example": "sales",
      "enum": [
        "sales",
        "payroll",
        "units",
        "area",
        "acres",
        "operations",
        "admissions"
      ]
    },
    "currency": {
      "type": "string",
      "enum": ["usd"],
      "description": "If amount is a currency, which currency",
      "example": "usd"
    },
    "effectiveDate": {
      "type": "string",
      "format": "date-time",
      "description": "Exposure rating item effective date",
      "example": "2023-01-01T00:00:00Z"
    },
    "exposureRef": {
      "type": "string",
      "description": "Reference to the exposure",
      "example": "exposure-1"
    },
    "expirationDate": {
      "type": "string",
      "format": "date-time",
      "description": "Exposure rating item expiration date",
      "example": "2024-01-01T00:00:00Z"
    },
    "jurisdiction": {
      "type": "string",
      "description": "The relevant jurisdiction",
      "example": "ca"
    },
    "premiumOverride": {
      "type": "string",
      "format": "cov-decimal",
      "description": "The optional exposure-level premium override",
      "example": "5000"
    },
    "rate": {
      "type": "string",
      "format": "cov-decimal",
      "description": "The rate used for calculation",
      "example": "2.303"
    },
    "rateProrataFactor": {
      "type": "string",
      "format": "cov-decimal",
      "description": "The pro-rata factor for the rate",
      "example": "1.000"
    },
    "rateStandard": {
      "type": "string",
      "format": "cov-decimal",
      "description": "The standard rate",
      "example": "2.303"
    },
    "rateOverride": {
      "type": "string",
      "format": "cov-decimal",
      "description": "The optional override rate",
      "example": "2.303"
    },
    "scalingStrategy": {
      "type": "string",
      "example": "standardTermAmount",
      "enum": ["basisAmount", "rate", "standardTermAmount", "none"]
    },
    "territoryCode": {
      "type": "string",
      "description": "The relevant territory code",
      "example": "201"
    }
  }
}
