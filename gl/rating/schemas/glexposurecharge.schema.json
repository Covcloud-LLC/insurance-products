{
  "$id": "http://covcloud.com/products/gl/rating/schemas/glexposurecharge",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "General Liability Exposure Charge",
  "type": "object",
  "properties": {
    "amount": {
      "type": "string",
      "format": "cov-decimal"
    },
    "chargeType": {
      "type": "string",
      "enum": ["premium", "fee", "tax"]
    },
    "currency": {
      "type": "string",
      "enum": ["usd"],
      "example": "usd"
    },
    "earningStrategy": {
      "type": "string",
      "enum": ["standard_per_day", "fully_earned"]
    },
    "effectiveDate": {
      "type": "string",
      "format": "date-time",
      "description": "Charge effective date",
      "example": "2023-01-01T00:00:00Z"
    },
    "expirationDate": {
      "type": "string",
      "format": "date-time",
      "description": "Charge expiration date",
      "example": "2023-01-01T00:00:00Z"
    },
    "exposureRateableRef": {
      "type": "string",
      "description": "The ID of the exposure rateablet",
      "example": "exposure-1-1"
    },
    "standardTermAmount": {
      "type": "string",
      "format": "cov-decimal"
    },
    "standardTermAmountProrataFactor": {
      "type": "string",
      "format": "cov-decimal"
    }
  }
}
