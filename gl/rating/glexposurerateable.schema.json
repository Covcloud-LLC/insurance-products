{
  "$id": "https://covcloud.com/schemas/gl/rating/glexposurerateable",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "General Liability Exposure Rateable Element",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique id of the rating item",
      "example": "exposure-1-1"
    },
    "currency": {
      "type": "string",
      "enum": ["usd"],
      "description": "If amount is a currency, which currency",
      "example": "usd"
    },
    "exposureRef": {
      "type": "string",
      "description": "Reference to the exposure",
      "example": "exposure-1"
    },
    "effectiveDate": {
      "type": "string",
      "format": "date-time",
      "description": "Exposure rating item effective date",
      "example": "2023-01-01T00:00:00Z"
    },
    "expirationDate": {
      "type": "string",
      "format": "date-time",
      "description": "Exposure rating item expiration date",
      "example": "2024-01-01T00:00:00Z"
    },
    "basisFactor": {
      "type": "string",
      "format": "cov-decimal",
      "description": "The conversion factor applied per unit of 'amount'",
      "example": "0.001"
    },
    "basisType": {
      "type": "string",
      "description": "Exposure Basis Type",
      "example": "sales",
      "enum": [
        "sales",
        "payroll",
        "units",
        "area",
        "acres",
        "operations",
        "admissions"
      ]
    },
    "amount": {
      "type": "string",
      "format": "cov-decimal",
      "example": "2500000"
    },
    "rate": {
      "type": "string",
      "format": "cov-decimal",
      "description": "The rate that will be used for rating",
      "example": "2.303"
    },
    "territoryCode": {
      "type": "string",
      "description": "The relevant territory code",
      "example": "201"
    },
    "jurisdiction": {
      "type": "string",
      "description": "The relevant jurisdiction",
      "example": "ca"
    }
  }
}
